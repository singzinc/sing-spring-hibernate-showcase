<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Properties>
		<Property name="datePattern">%d{yyyy-MM-dd}</Property>
		<Property name="backupFilePattern">log/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz</Property>

	</Properties>
	<Appenders>
	    <Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="%-5p|%d{ABSOLUTE}| %c{1}:%L - %M - %m%n" />
		</Console>
		
		<RollingFile name="controllerFile" append="true" fileName="${catalina.base}/sing-spring/controller.log"
					filePattern="${backupFilePattern}">
			<PatternLayout pattern="%-5p|%d{ABSOLUTE}| %c{1}:%L - %M - %m%n" />
			<!--<Policies> <SizeBasedTriggeringPolicy size="50MB" /></Policies> -->
			<Policies> 
				<SizeBasedTriggeringPolicy size="10MB" />
			</Policies>
			<DefaultRolloverStrategy max="10" /> 
		</RollingFile>

		
	</Appenders>
	<Loggers>
		<logger name="com.singplayground.showcase.controller" level="info">
			<AppenderRef ref="controllerFile" />
		</logger>
		<Root level="debug">
			<AppenderRef ref="console" />
		</Root>
	</Loggers>
</Configuration>
